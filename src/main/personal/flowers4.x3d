        <ROUTE fromField="coordinates" fromNode="OrbitScript"
               toField="set_point" toNode="OrbitCoordinates"/>
        <ROUTE fromField="fraction_changed" fromNode="Clock"
               toField="set_fraction" toNode="OrbitScript"/>
