                        "@accessType":"outputOnly",
                        "@type":"SFBool"
                      },
                      {
                        "@name":"bindView4",
                        "@accessType":"outputOnly",
                        "@type":"SFBool"
                      },
                      {
                        "@name":"bindView5",
                        "@accessType":"outputOnly",
                        "@type":"SFBool"
                      },
