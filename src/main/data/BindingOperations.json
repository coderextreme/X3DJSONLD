                        "@name":"view1Bound",
                        "@accessType":"inputOnly",
                        "@type":"SFBool"
                      },
                      {
                        "@name":"view2Bound",
                        "@accessType":"inputOnly",
                        "@type":"SFBool"
                      },
                      {
                        "@name":"view3Bound",
                        "@accessType":"inputOnly",
                        "@type":"SFBool"
                      },
